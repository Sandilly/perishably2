<h1><%= @product.name %> </h1>

<p>Date Added : <%= @product.created_at %> </p>
<p>Expiration Date : <%= @product.expiration_date %></p>
<%= link_to "Back", product_path %>
<%= link_to "Update Item", product_path(@product), method: "patch" %> 
<%= link_to "Delete Item", product_path(@product), method: "delete" %>
 

<h1>Add new items to my list</h1>
 
<%= form_for @product,url: {action: "create"}, html: {class: "new_form"} do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>

  <%= f.label :expiration_date %>
  <%= f.text_field :expiration_date %>

  <%= link_to "Cancel", root_path %>
  <%= f.submit "Create" %>
<% end %>
 