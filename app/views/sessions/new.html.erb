<div class="row-fluid borBox inBox well deep">


  <h1>Log in</h1>
  <%= render "layouts/flash_notices" %>

  <%= form_tag sessions_path do %>
    <div class = "field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class = "field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class = "actions">
      <%= submit_tag "LOG IN", class: "btn btn-info"%> 
    </div>
    
    <%= link_to "Sign Up", signup_path %>
  <% end %>
</div>
