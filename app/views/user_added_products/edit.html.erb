<h1><i class="fa fa-pencil-square-o"></i>&nbsp;<%= @user_product.name.capitalize %> </h1>

<%= form_for @user_product, url: {action: "update"}, html: {class: "update_form"} do |f| %>
  
  
  <div class = "light well">
  
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :product_details %>
    <%= f.text_field :product_details %>

    <%= f.label "Date of Expiration:" %>
    <%= f.text_field :exp_date , :id => "datepicker" %> <img src="fa-calendar.png" /> 

    <%= f.label :storage%>
    <%= f.text_field :storage%>

  </div>

  <div class = "light well">

    <%= f.label(:email, "Notify me by email") %>  
    <%= f.check_box(:email) %>

    <%= f.label(:sms, "Notify me by text message") %>
    <%= f.check_box(:sms) %>

    <br>
    <br />
    <%= f.label :notification_date %>
    <%= f.text_field :notification_date %>

</div>

<div id="add_ppl">
    <%= link_to 'Add people to notifications', '#',
          :onclick => 'add_ppl_to_notification()' %>
    </div>
  </div>
  <%= link_to "<i class='fa fa-chevron-circle-left'></i> &nbsp;Back".html_safe, user_added_product_path, class: "btn btn-info round2" %>
  <%= f.submit "Update Item", class: "btn btn-info round2" %> 

  <div class="field">
    <h2>Recipient</h2>
  <%= f.fields_for(:recipients, Recipient.new) do |recipient_field| %>
     <%= recipient_field.label :name %>
     <%= recipient_field.text_field :name %>
     <%= recipient_field.label :email %>
     <%= recipient_field.text_field :email %>
     <%= recipient_field.label :phone_number %>
     <%= recipient_field.text_field :phone_number %>
  <% end%>
</div>

  <%= link_to "Back", user_added_product_path %>
  <%= f.submit "Update Item" %> 

<% end %>


