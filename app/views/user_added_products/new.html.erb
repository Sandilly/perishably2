
<h1>Add new products to my list.</h1>

 <%= form_tag(user_added_products_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Products" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %> 

<%= form_for @user_product, url: {action: "create"}, html: {class: "new_form"} do |f| %>

  <%= f.label :brand, "Product Brand" %>:
  <%= f.text_field :brand %>

  <%= f.label :product_details, "Product Details:" %>
  <%= f.text_field :product_details %>


  <%= f.label :number_unit_of_time, "Num Time:" %>
  <%= f.select(:number_unit_of_time, options_for_select(1..7)) %> 

  <%= f.label :unit_of_time_period, "Unit of Time:" %>
  <%= f.select(:unit_of_time_period, options_for_select(["Day(s)", "Week(s)", "Month(s)", "Year(s)" ])) %> 

  
  <%= f.label :storage, "Storage:" %>
  <%= f.text_field :storage %>

  <%= link_to "Cancel", user_added_products_path %>
  <%= f.submit "Create" %>
<% end %>






