<%# render "layouts/flash_notices" %>
<div class="products-panel">

<h1><i class="fa fa-barcode"></i> <%= @user_product.name.upcase %> </h1>
<div class ="light well">
    <h4>PRODUCT INFORMATION</h4>
    <label>PRODUCT DETAILS:</label>
    <p><%= @user_product.product_details %></p>
    <label>SHELF LIFE:</label>
    <p><%= @user_product.number_unit_of_time %> <%= @user_product.unit_of_time_period %></p>
    <label>STORAGE:</label>
    <p><%= @user_product.storage %></p>
 
    </div>
    <div class ="light well">

      <h4>Product Date Information</h4>
      <p>Date Added: <span id="date_added"><%= @create_date %></span></p>
      <p>Date of Expiration: <span id = "date_exp"><%= @user_product.exp_date %></span></p>
      
      <div class="progress progress-striped active">
        <div class="bar" role="progressbar"></div>
      </div>
    </div>

    <div class ="light well">
      <h4>Product Notification Information</h4>
        <div class="field"> 
        Notify : <% @user_product.recipients.each do |recipient| %> 
          <%= link_to recipient.name.capitalize, user_added_product_recipient_path(@user_product, recipient) %>
          <%= recipient.email%> 
          <%= recipient.phone_number %>
        <% end %>
        </div>

        <p>Notification Date : <%= @user_product.notification_date %></p>
        
    </div>
    <%= link_to "<i class='fa fa-chevron-circle-left'></i> &nbsp;BACK".html_safe, user_added_products_path, class: "btn btn-info round2" %>
    <%= link_to "<i class='fa fa-file-text'></i> &nbsp;EDIT".html_safe, edit_user_added_product_path(@user_product),class: "btn btn-info round2" %>

    <%= link_to "<i class='fa fa-trash-o'></i> &nbsp;DESTROY".html_safe, @user_product, method: :delete, data: { confirm: "Are you sure you want to delete #{@user_product.name}?" }, class: "btn btn-inverse round2" %>


  </div>
</div>
  <script>
  setVariables();
</script>
