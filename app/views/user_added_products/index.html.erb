<h1>
  <i class="fa fa-list-alt"></i> <%= current_user.name.capitalize %>'s List
</h1>

  <p> List of Items </p>

<div class="light well">
  <%# render "layouts/flash_notices" %>

<div class="products_list">
  <%= render "layouts/flash_notices" %>

  <p> My Products </p>

  <ul id = "user_product_list">
    <% @products.sort.each do |product|%>
      <li class="product_info"> 
        <ul class = "each_product_info">
          <li>
            <%= link_to "#{product.name}".capitalize, user_added_product_path(product) %>
          </li>
          <li class="product_doe"> <%= "#{product.exp_date}" %>
        </ul>

      </li>
      
    <% end %>  
  </ul>
</div>
<div>
  No Notifications Sent
</div>
<%= link_to "<i class='fa fa-plus'></i> &nbsp;Add Item".html_safe, new_user_added_product_path, class: "btn btn-info round2" %>
</div>
