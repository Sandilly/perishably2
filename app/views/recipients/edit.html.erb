<h1>
  <%= @recipient.name.capitalize %>'s List</h1>
<div class="field">
<%= form_for([@user_product, @recipient]) do |f| %>
    <%= f.label :name %>
    <%= f.text_area :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>  
    <%= f.submit "Update Recipient" %>   
<%  end %>
  <%= link_to "Back", user_added_product_path(@user_product) %>
  
</div>
